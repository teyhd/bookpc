    <script>
      (function () {
        function ensureToastRoot() {
          let root = document.getElementById('toast-root');
          if (!root) {
            root = document.createElement('div');
            root.id = 'toast-root';
            root.className = 'fixed right-4 top-4 z-50 space-y-3';
            document.body.appendChild(root);
          }
          return root;
        }

        window.showToast = function (message, tone = 'info') {
          const root = ensureToastRoot();
          const toast = document.createElement('div');
          const palette = {
            success: 'from-emerald-500/20 via-emerald-400/10 to-transparent border-emerald-400/30',
            error: 'from-rose-500/20 via-rose-400/10 to-transparent border-rose-400/30',
            info: 'from-sky-500/20 via-sky-400/10 to-transparent border-sky-400/30'
          };
          toast.className = `toast-shell glass-panel relative overflow-hidden border rounded-xl px-4 py-3 shadow-glow animate-fade-in bg-gradient-to-br ${palette[tone] || palette.info}`;
          toast.innerHTML = `<div class="text-sm leading-relaxed">${message}</div>`;
          root.appendChild(toast);
          setTimeout(() => toast.remove(), 3200);
        };

        window.M = {
          toast: ({ html = '', classes = '' }) => {
            const cls = (classes || '').toLowerCase();
            const tone = cls.includes('red') ? 'error' : (cls.includes('teal') || cls.includes('green')) ? 'success' : 'info';
            window.showToast(html, tone);
          }
        };

        function openModal(el) {
          el.classList.remove('hidden');
          document.body.classList.add('overflow-hidden');
        }

        function closeModal(el) {
          el.classList.add('hidden');
          document.body.classList.remove('overflow-hidden');
        }

        window.toggleModal = function (id, state = true) {
          const el = document.getElementById(id);
          if (!el) return;
          state ? openModal(el) : closeModal(el);
        };

        function initModalSystem() {
          document.querySelectorAll('.modal-trigger[href^="#"]').forEach((trigger) => {
            const target = document.querySelector(trigger.getAttribute('href'));
            if (!target) return;
            trigger.addEventListener('click', (e) => {
              e.preventDefault();
              openModal(target);
            });
          });

          document.querySelectorAll('.modal').forEach((modal) => {
            modal.addEventListener('click', (e) => { if (e.target === modal) closeModal(modal); });
            modal.querySelectorAll('.modal-close').forEach((btn) =>
              btn.addEventListener('click', (e) => { e.preventDefault(); closeModal(modal); })
            );
          });
        }

        document.addEventListener('DOMContentLoaded', initModalSystem);
      })();
    </script>

